OObject::OObject()
{
    _is_dead = false;
}

void OObject::Invalidate()
{
    if (_is_dead) return;
    InvalidateImp();
    _is_dead = true;
}

void OObject::Destory() 
{
    Invalidate();
    delete this;
}

bool OObject::IsDead() 
{
    return _is_dead;
}
